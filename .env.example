# Convex (see .env.local for your deployment)
CONVEX_DEPLOYMENT=
VITE_CONVEX_URL=
# Same as VITE_CONVEX_URL but ends in .site (for auth proxy)
VITE_CONVEX_SITE_URL=
# Local site URL (e.g. http://localhost:3000)
VITE_SITE_URL=

# Better Auth (set in Convex: npx convex env set BETTER_AUTH_SECRET=... && npx convex env set SITE_URL=...)

# LinkedIn import pipeline (used by Convex actions)
# Set in Convex Dashboard → Settings → Environment Variables for production.
# For local dev, add to .env.local so `npx convex dev` can run the import action.
LINKDAPI_API_KEY=
LINKEDIN_PROVIDER=linkdapi

# AI normalization for search arrays (optional). Set to enable Claude normalization.
# Omit to skip normalization and use raw arrays.
ANTHROPIC_API_KEY=

# Pipeline e2e test mode: mock LinkedIn provider and normalizer so cron/pipeline run without API keys.
# Set to "true" in Convex env (or .env.local for local dev), then use importQueue.seedTestQueue(orgId).
PIPELINE_TEST_MODE=
